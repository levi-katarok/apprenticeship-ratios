---
import '../styles/global.css'

interface Props {
  title: string;
  description?: string;
}

const { title, description = "State-by-state apprenticeship ratio requirements for public works construction projects." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+4:opsz,wght@8..60,400;8..60,600&family=Source+Sans+3:wght@400;600&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Apprenticeship Ratios</title>
  </head>
  <body class="bg-stone-50 min-h-screen font-sans text-stone-800">
    <header class="border-b border-stone-200">
      <div class="max-w-4xl mx-auto px-6 py-4">
        <nav class="flex items-center justify-between">
          <a href="/" class="font-serif text-xl text-stone-900 hover:text-stone-600">
            Apprenticeship Ratios
          </a>
          <div class="flex items-center gap-6 text-sm">
            <a href="/" class="text-stone-600 hover:text-stone-900">Home</a>
            <a href="/about" class="text-stone-600 hover:text-stone-900">About</a>
          </div>
        </nav>
      </div>
    </header>

    <main class="max-w-4xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="border-t border-stone-200 mt-16">
      <div class="max-w-4xl mx-auto px-6 py-8 text-sm text-stone-500">
        <p class="mb-2">
          Data compiled from state statutes and agency websites.
          This is an unofficial resource â€” verify requirements with your state apprenticeship agency for compliance.
        </p>
        <p class="text-stone-400">
          Last update: {new Date().toLocaleDateString()}
        </p>
      </div>
    </footer>
  </body>
</html>
